{
	"compilerOptions": {
		"strict": true,
		"esModuleInterop": true,
		"pretty": true,
		"resolveJsonModule": true,
		"allowSyntheticDefaultImports": true,
		"skipLibCheck": true,
		"lib": ["es2017", "dom"],
		"jsx": "react-jsx",
		"target": "ES2022",
		"module": "ESNext",
		"moduleResolution": "bundler",
		"outDir": "./dist",
		"baseUrl": "./src",
		"rootDir": "./",
		"paths": {
			"@/*": ["src/*"],
			"@/hooks/*": ["src/hooks/*"],
			"@/components/*": ["src/components/*"],
			"@/utils/*": ["src/utils/*"],
			"@/types/*": ["src/types/*"]
		},
		"typeRoots": ["./node_modules/@types", "./node_modules/@figma"]
	}
}